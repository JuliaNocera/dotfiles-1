{
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "json",
    "graphql",
    "ruby",
    "elixir"
  ],
  "prettier.onlyUseLocalVersion": true,
  "eslint.autoFixOnSave": true,
  "prettier.tabWidth": 2,
  "tsserver.npm": "/usr/local/bin/npm",
  "yaml.format.enable": true,
  "yaml.format.singleQuote": true,
  "markdownlint.config": {
    "MD004": {
      "style": "dash"
    }
  }
}
