set backspace=indent,eol,start
set autoindent
set history=500
set showcmd
set tabstop=2 softtabstop=2 shiftwidth=2
set expandtab
set smarttab
set visualbell
set splitright
set splitbelow
set timeoutlen=400
set cursorline
set shiftround
set colorcolumn=80
set wildmenu
set wildmode=list:longest
set encoding=utf-8 fileencoding=utf-8 termencoding=utf-8
set scrolloff=4
set sidescrolloff=5
set nowrap
set nobackup
set t_ut=
set hidden
set noswapfile
set autoread
set lazyredraw
set suffixesadd+=.jsx.coffee,.coffee,.js.coffee

set wildignore+=*/tmp*/,*.swp,*.zip,*.scssc
set wildignore+=*/generated/*,*/images/*,*/node_modules/*,tmp/*

set relativenumber
if v:version >= 704
  set number
endif

runtime macros/matchit.vim        " use % to jump between start/end of methods

command! Q q
command! W w
command! Wq wq

" Use 0 to go to first character instead of beginning of line
nnoremap 0 ^

nnoremap <C-h> <C-W><C-h>
nnoremap <C-j> <C-W><C-j>
nnoremap <C-k> <C-W><C-k>
nnoremap <C-l> <C-W><C-l>

inoremap jk <esc>

nnoremap <leader>vi :sp $MYVIMRC<cr>
nnoremap <leader>so :source $MYVIMRC<cr>

autocmd BufNewFile,BufReadPost .eslintrc set filetype=json

" vim:ft=vim
